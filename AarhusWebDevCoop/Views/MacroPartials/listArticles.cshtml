@inherits Umbraco.Web.Macros.PartialViewMacroPage
@{
    var root = Model.Content.Site();
    var selection = CurrentPage.Children.Where("Visible").OrderBy("CreateDate desc");
    
}


@foreach (var item in selection)
{
<br>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <div class="articletitle">
                        <a href="@item.Url">@item.articleTitle</a>
                    </div>
                </h5>
                <div class="articlepreview">@Umbraco.Truncate(@item.articleContent, 200) <a href="@item.Url">Read More..</a></div>
            </div>
        </div>
    </div>
}


