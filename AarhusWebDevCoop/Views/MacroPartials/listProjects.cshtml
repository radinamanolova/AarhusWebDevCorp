
@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using Umbraco.Core.Models
@using Umbraco.Web
@{ 
    var selection = CurrentPage.Children.Where("Visible").OrderBy("CreateDate desc"); 
    @* OrderBy() takes the property to sort by and optionally order desc/asc *@
}

@foreach (var item in selection)
{
<br>
    <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><div class="articletitle"><a href="@item.Url">@item.projectTitle</a></div></h5>
        
        <div class="articlepreview">@Umbraco.Truncate(@item.projectDescription,200) <a href="@item.Url">Read More..</a></div>
      </div>
    </div>
  </div>
}
